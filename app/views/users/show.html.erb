

<% if signed_in? %>
  <h1>Welcome To PT Helper</h1>
  <div class="nav">
    <ul>
      <li>Add New Exercise</li>
      <li id>See My Exercises</li>
      <li>Create Workout</li>
      <li>View Past Activity</li>
    </ul>
  </div>
<% else %>
  <h1>Sign in to PT Helper</h1>
<% end %>

<ul id="exercise-list"></ul>
<script type="template" id="exercise-list-template">
    <%% exerciseCollection.each(function(exercise) { %>
      <li><%%= exercise.get('ex_name') %></li>
    <%% }) %>
</script>

<form id="new-exercise"></form>
<script type="template" id="new-exercise-template">
  <fieldset>
    <legend>Enter New Exercise</legend>
      <label>Exercise Name</label>
        <input id="exercise-name" type="text" name="ex_name">
      <label>Left And Right Sides?</label>
        <input id="left-right" type="checkbox" name="two_sides" value=true>
      <label>Number of Reps</label>
        <input id="reps" type="integer" name="reps">
      <label>Image Link</label>
        <input id="img_url" type="text" name="img_url">
      <label>Hold Position for... (seconds)</label>
        <input id="holdtime" type="integer" name="holdtime">
        <input type="hidden" name="user_id" value="<%= current_user.id %>">
    <input type="submit" value="Submit">
  </fieldset>
</script>

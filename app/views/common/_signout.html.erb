<% if signed_in? %>

  <%= form_for :session, url: signout_path, method: 'delete' do |f| %>
    See the account of <%= link_to current_user.user_name, current_user %>
    <%= f.submit "Sign out", id: 'signout' %>
  <% end %>


<% else %>

  <%= link_to "Sign In", signin_path %>  <%= link_to "Sign up", signup_path %>

<% end %>
